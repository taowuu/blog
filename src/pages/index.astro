---
import Layout from "../layouts/Layout.astro";
import "../assets/iconfont.css";
import { Skill } from "../components/Skill";
import { Blog } from "../components/Blog";

import config from "../../meta.config";

const { blogs, skills, name } = config;

---

<Layout title="Welcome to Astro.">
  <div class="mt-6 max-w-screen-lg md:flex mx-auto">
    <div class="md:w-1/3 p-2 relative">
      <div class="md:fixed">
        <div class="md:block">
          <div class="flex justify-center">
            <img
              class="h-32 w-32 rounded-full mx-auto mx-4"
              src="https://avatars.githubusercontent.com/u/47629165?v=4"
            />
          </div>
          <div class="mb-12 text-center mt-4 justify-center items-center">
            <h1 class="text-2xl text-xl text-gray-800 font-bold">{name}</h1>
            
            <div class="md:text-lg text-gray-600">Front End Engineer</div>
          </div>
        </div>
        <div class="mx-4 my-4 hidden md:block">
          <!-- <div class="my-5 text-lg text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-wechat"></span>
            </div>
            cuixr1314
          </div> -->
          <!-- <div class="my-5 text-lg text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-Phoneshouji"></span>
            </div>
            138138138138
          </div> -->
          <a
            href="https://github.com/taowuu"
            class="my-5 flex"
            target="_blank"
          >
            <div class="mr-2">
              <span class="iconfont icon-github"></span>
            </div>
            <span class="text-blue-500">https://github.com/taowuu</span>
          </a>
          <div class="my-5 text-lg text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-email"></span>
            </div>
            taowuu@foxmail.com
          </div>
          <div class="my-5 text-lg text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-position"></span>
            </div>
            Shenzhen
          </div>
          
        </div>
      </div>
    </div>
    <div class="md:w-2/3 p-2 w-full">
      <!-- sikll -->
      <div class="mx-4">
        <h1 class="mb-4 text-4xl text-gray-700 font-bold">Skill</h1>
        <ul>
          <li class="mb-6 flex flex-wrap">
            {
              skills.map((name) => {
                return <Skill name={name} client:load />;
              })
            }
          </li>
        </ul>
      </div>
      <!-- blog -->
      <div class="mx-4">
        <h1 class="mb-4 text-4xl text-gray-700 font-bold">Blog</h1>
        <ul>
          <li class="mb-4">
            <div class="mt-1">
              <!-- blog 模板 -->
              {
                blogs.map((b) => {
                  return <Blog title={b.title} url={b.url} client:load />;
                })
              }
              <!--  -->
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
